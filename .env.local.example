# Google Gemini AI
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# Cloudinary (get from https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Vercel KV (Redis) - for fabric storage & rate limiting
# Local development: use these names
KV_REST_API_URL=your_kv_url_here
KV_REST_API_TOKEN=your_kv_token_here
# Vercel Upstash Integration: automatically provides STORAGE_KV_REST_API_URL and STORAGE_KV_REST_API_TOKEN

# NextAuth.js
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# Admin Credentials
# Generate password hash with: node -e "require('bcryptjs').hash('yourpassword', 10).then(console.log)"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=$2a$10$your_bcrypt_hash_here

# App Config
NEXT_PUBLIC_DAILY_LIMIT=5
